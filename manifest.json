{
  "manifest_version": 2,
  "name": "huboard-ext",
  "description": "some huboard extensions",
  "version": "1.0",
  "permissions": [
    "http://huboard.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://huboard.com/*"],
      "js": [
        "js/jquery.js", 
        "js/assignees.js"
      ],
      "css": [
        "css/font-awesome.css",
        "css/main.css"
      ],
      "run_at": "document_idle"
    }
  ]
}

