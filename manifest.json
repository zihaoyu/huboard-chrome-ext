{
  "manifest_version": 2,
  "name": "huboard-chrome-ext",
  "description": "some huboard extensions",
  "version": "1.0",
  "permissions": [
    "http://huboard.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://huboard.com/*/board", 
        "http://huboard.com/*/backlog"
      ],
      "js": [
        "js/jquery.js", 
        "js/assignees.js",
        "js/drawer.js",
        "js/linkify.js"
      ],
      "css": [
        "css/font-awesome.css",
        "css/main.css"
      ],
      "run_at": "document_idle"
    }
  ]
}

